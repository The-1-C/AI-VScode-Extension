{
  "name": "ai-agent",
  "displayName": "AI Coding Agent",
  "description": "Local LLM-powered coding agent with tool use",
  "version": "0.0.1",
  "publisher": "local",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/The-1-C/AI-VScode-Extension"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other"],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-agent-sidebar",
          "title": "AI Agent",
          "icon": "$(hubot)"
        }
      ]
    },
    "views": {
      "ai-agent-sidebar": [
        {
          "type": "webview",
          "id": "ai-agent.chatView",
          "name": "Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "ai-agent.chat",
        "title": "AI Agent: Open Chat"
      },
      {
        "command": "ai-agent.fixFile",
        "title": "AI Agent: Fix Current File"
      },
      {
        "command": "ai-agent.askAboutSelection",
        "title": "AI Agent: Ask About Selection"
      },
      {
        "command": "ai-agent.stop",
        "title": "AI Agent: Stop"
      }
    ],
    "keybindings": [
      {
        "command": "ai-agent.chat",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "ai-agent.askAboutSelection",
          "when": "editorHasSelection",
          "group": "ai-agent"
        },
        {
          "command": "ai-agent.fixFile",
          "group": "ai-agent"
        }
      ]
    },
    "configuration": {
      "title": "AI Agent",
      "properties": {
        "ai-agent.apiUrl": {
          "type": "string",
          "default": "http://127.0.0.1:1234/v1/chat/completions",
          "description": "LLM API endpoint (LM Studio, Ollama, OpenAI, etc.)"
        },
        "ai-agent.model": {
          "type": "string", 
          "default": "local-model",
          "description": "Model name/identifier"
        },
        "ai-agent.temperature": {
          "type": "number",
          "default": 0.1,
          "minimum": 0,
          "maximum": 2,
          "description": "Response creativity (0 = deterministic, 2 = very creative)"
        },
        "ai-agent.maxTokens": {
          "type": "number",
          "default": 4096,
          "description": "Maximum tokens in response"
        },
        "ai-agent.timeout": {
          "type": "number",
          "default": 120000,
          "description": "Request timeout in milliseconds"
        },
        "ai-agent.autoSave": {
          "type": "boolean",
          "default": true,
          "description": "Auto-save chat threads"
        },
        "ai-agent.systemPromptAddition": {
          "type": "string",
          "default": "",
          "description": "Additional instructions to append to system prompt"
        },
        "ai-agent.showToolCalls": {
          "type": "boolean",
          "default": true,
          "description": "Show tool calls in chat"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package --no-dependencies",
    "install-ext": "npm run compile && npm run package && code --install-extension ai-agent-0.0.1.vsix --force",
    "build": "npm run compile && npm run package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  }
}
